@model CustomerUpSertViewModel

@{
    ViewBag.Title = "Add/Edit";
    Layout = "~/views/shared/_layout.cshtml";
}

@if (Model.CustomerToAdd?.CustomerId>0)
{
    <h3>Edit Customer</h3>
}
else
{
    <h3>Add Customer</h3>
}
<div class="container">
    <div class="row">
        <div class="col-4">
            <form method="post" action="UpSertPost">
                <div>
                    <input type="number"  asp-for="@Model.CustomerToAdd.CustomerId" class="form-control" hidden>
                </div>
                <div class="form-group">
                    <label for="firstNameId">First Name</label>
                    <input type="text" class="form-control" id="firstNameId" asp-for="@Model.CustomerToAdd.FirstName">
                </div>
                <div class="form-group">
                    <label for="lastNameId">Last Name</label>
                    <input type="text" class="form-control" id="lastNameId" asp-for="@Model.CustomerToAdd.LastName">
                </div>
                <div class="form-group">
                    <label for="emailId">Email</label>
                    <input type="email" class="form-control" id="emailId" asp-for="@Model.CustomerToAdd.Email">
                </div>
                <div class="form-group">
                    <label for="birthDateId">Birth Date</label>
                    <input type="datetime-local" class="form-control" id="birthDateId" min="2000-01-02"  asp-for="@Model.CustomerToAdd.BirthDate >
                </div>
                <div class="form-group">
                    <label for="genderId">Gender</label>
                    <select class="form-control" asp-for="@Model.CustomerToAdd.GenderId">
                        <option >Please select your gender</option>
                        @foreach (var gender in Model.Genders)
                        {
                            <option value="@gender.GenderId">@gender.GenderType</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="genderId">Gender</label>
                    <select class="form-control" asp-for="@Model.CustomerToAdd.MembershipTypeId">
                        <option>Please select your gender</option>
                        @foreach (var membership in Model.MembershipTypes)
                        {
                            <option value="@membership.MembershipId">@membership.Membership</option>
                        }
                    </select>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="isSubscribedId" asp-for="@Model.CustomerToAdd.IsSubscribetToNewsLetter>
                    <label class="form-check-label" for="isSubscribedId">Subscribe to email news letter</label>
                </div>
                <button type="submit" class="btn btn-outline-primary">Submit</button>
                <a class="btn btn-outline-info ms-2" asp-action="Index" asp-controller="Customer">Back to customer list</a>
            </form>
        </div>

    </div>
   
</div>