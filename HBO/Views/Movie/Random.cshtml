@model RandomMovieViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Hello Movie Random</h1>

@{
    var className = Model.Customers.Count > 0 ? "popular" : "";
}
<h3>@Model.Movie?.Name</h3>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before!</text>
}
else
{
    <h3>List of customers who rented this movie!</h3>
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.FirstName</li>
        
        }
    </ul>
    
}

